{
  "name": "@ipikuka/ui",
  "version": "1.0.2-alpha",
  "description": "A react ui design system with storybook",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build && type-coverage",
    "format": "npm run prettier && npm run lint",
    "prettier": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test-coverage": "vitest run --coverage",
    "test:storybook": "vitest --project=storybook",
    "typecheck": "tsc --noEmit",
    "type-coverage": "type-coverage",
    "prepublishOnly": "npm run test && npm run format && npm run test-coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "author": "talat kuyuk <talatkuyuk@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ipikuka/ipikuka-ui.git"
  },
  "keywords": [
    "react",
    "ui-kit",
    "design-system",
    "components"
  ],
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@storybook/addon-docs": "^10.0.5",
    "@storybook/addon-onboarding": "^10.0.5",
    "@storybook/addon-vitest": "^10.0.5",
    "@storybook/react-vite": "^10.0.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/browser": "^4.0.7",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/eslint-plugin": "^1.4.1",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.0.5",
    "globals": "^16.5.0",
    "jsdom": "^27.1.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "postcss-nesting": "^13.0.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "storybook": "^10.0.5",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.7"
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreAsAssertion": true,
    "strict": true
  }
}
